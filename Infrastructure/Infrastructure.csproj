    <Authors>rbjoergensen</Authors>
    <Company>CalloftheVoid</Company>
    <Description>Infrastructure shared by other projects</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageTags>Logging, Azure</PackageTags>
